{
  "presets": [
    "@babel/env",
    "@babel/react",
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "import",
      {
        "libraryName": "antd",
        "libraryDirectory": "lib",
        "style": true
      },
      "antd"
    ],
    [
      "import",
      {
        // this was the best combination
        "libraryName": "@ant-design/icons",
        "libraryDirectory": "",
        "camel2DashComponentName": false
      },
      "@ant-design/icons"
    ]
  ]
}